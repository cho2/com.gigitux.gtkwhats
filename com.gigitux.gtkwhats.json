{
  "app-id": "com.gigitux.gtkwhats",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.36",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
  "command": "gtkwhats",
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--socket=session-bus",
    "--device=dri",
    "--socket=pulseaudio"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "build-args": ["--share=network"],
    "env": {
      "RUSTFLAGS": "--remap-path-prefix =../",
      "CARGO_HOME": "/run/build/gtkwhats/cargo"
    }
  },
  "modules": [
    {
      "name": "gtkwhats",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/gigitux/gtkwhats.git",
          "branch": "1.0",
          "commit": "9e527ef69f35062f9536be71d8e11a4bd83a75ee"
        }
      ]
    }
  ]
}
