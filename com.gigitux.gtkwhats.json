{
  "app-id": "com.gigitux.gtkwhats",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.36",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
  "command": "gtkwhats",
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--socket=session-bus",
    "--device=dri",
    "--socket=pulseaudio"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "env": {
      "RUSTFLAGS": "--remap-path-prefix =../",
      "CARGO_HOME": "/run/build/gtkwhats/cargo"
    }
  },
  "modules": [
    {
      "name": "gtkwhats",
      "buildsystem": "meson",
      "config-opts": ["-Dbuildtype=release"],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/gigitux/gtkwhats/releases/download/1.0/flatpak.tar",
          "sha256": "cbee0e51b1404732e9ef232a9373e0923ecfce129e90093d6f0a723037e54711",
          "strip-components": 0
        }
      ]
    }
  ]
}
